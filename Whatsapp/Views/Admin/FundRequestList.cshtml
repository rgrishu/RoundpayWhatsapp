@{
    ViewData["Title"] = "Fund Request";
}
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Fund Request
        </h3>

    </div>
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-sm-6 col-6">
                            <h4 class="card-title">

                                <i class="fas fa-wrench"></i>
                                Request List

                            </h4>
                        </div>
                    </div>
                </div>

                <div class="card-body">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead class="thead-light">
                                <tr>
                                    <th>#</th>
                                    <th>User</th>
                                    <th>Requested Amount</th>
                                    <th>Remark</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>





@section scripts{
    <script>
        $(document).ready(function() {
            loadData();
        });
        function loadData() {
            $.ajax({
                type: 'get',
                url: '/Admin/GetFundRequestList',
                success: function(data) {
                    $('tbody').html(data);
                },
                error: function(data) {
                    console.log('An error occurred.');
                    console.log(data);
                },
            });
        }
        function UpdateFundStatus(clicked_id) {
            let id = $("#" + clicked_id).closest("tr").data().itemId;
            let status = $("#" + clicked_id).val();
            console.log(status);
            console.log(id);
            $.ajax({
                type: 'post',
                url: '/Admin/UpdateFundRequest/',
                data: { id: id , Status : status},
                success: function(response) {
                    Q.notify(response.statusCode, response.responseText);
                     loadData();
                },
                error: function(response) {
                },
            });
        }
    </script>
}
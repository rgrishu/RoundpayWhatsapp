@using Whatsapp.Models.ViewModel
@model Users
<div class="card">
    <div class="card-body">
        <form class="form-block" action="/UserManagement/AddUser" method="post">
            <div class="row">
                <div class="row">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
            <div class="form-group">
                <label>Role</label>
                <select class="form-control" asp-for="Role">
                    <option value="">--Select--</option>
                    <option value="SELLER">Seller</option>
                    <option value="RESELLER">ReSeller</option>
                    <option value="WHITELEABEL">White Label</option>
                </select>
            </div>
        </div>

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" asp-for="Name" required />
            </div>
        </div>

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
            <div class="form-group">
                <label>Mobile No</label>
                <input class="form-control" asp-for="PhoneNumber" />
            </div>
        </div>

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
            <div class="form-group">
                <label>Email ID</label>
                <input class="form-control" asp-for="Email" />
            </div>
        </div>

        <div class="btn-group">
            <button type="submit" id="" class="btn btn-primary">Add</button>
        </div>
    </div>
            </div>
        </form>
    </div>
</div>




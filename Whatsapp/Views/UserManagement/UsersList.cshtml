@{
    ViewData["Title"] = "Users";
}
<style>
    .customLink{
        text-decoration : underline!important;
        color: #8371d1!important;
        font-weight : 600!important;
        cursor: pointer!important;
    }
</style>
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Users List
        </h3>
    </div>

    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">

                <div class="card-header">
                    <div class="row">
                        <div class="col-sm-2">
                            <h4 class="card-title">

                                <i class="fas fa-user"></i>
                                Users List

                            </h4>
                        </div>
                        <div class="col-sm-10">
                            <button id="btncreateuser" class="btn btn-primary btn-sm float-right"
                                    type="submit">
                                + Create New
                            </button>
                        </div>
                    </div>

                </div>
                <div class="card-body">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead class="thead-light">
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Mobile</th>
                                    <th>Email</th>
                                    <th>Balance</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



</div>


<!-- content-wrapper ends -->
@section scripts{
    <script>
        $(document).ready(function() {



            loadData();
        });
        function loadData() {
            $.ajax({
                type: 'post',
                url: '/UserManagement/GetUsersList',
                success: function(data) {
                    console.log(data)
                    $('tbody').html(data);
                },
                error: function(data) {
                    console.log('An error occurred.');
                    console.log(data);

                },
            });
        }
        $('#btncreateuser').click(function() {
            $.ajax({
                type: 'post',
                url: '/UserManagement/UserForm',
                data: { role: $('#spnrole').text() },
                success: function(data) {
                    Q.alert({
                        title: "Add User",
                        body: data,
                        width: '500px',
                    });
                },
                error: function(data) {
                },
            });
        });

        function RenderForm(id) {
            $.ajax({
                type: 'post',
                url: '/UserManagement/UserForm/' + id,
                success: function(response) {
                    debugger;
                    Q.alert({
                        title: "Add User",
                        body: response,
                        width: '500px',
                    });
                },
                error: function(data) {
                },
            });
        }

        function UpdateUserBalanceFromAdmin(id) {
            $.ajax({
                type: 'post',
                url: '/UserManagement/GetUserBalance/' + id,
                success: function(response) {
                    Q.alert({
                        title: "Add Balance",
                        body: response,
                        width: '500px',
                    });
                },
                error: function(data) {
                },
            });
        }
    </script>
}

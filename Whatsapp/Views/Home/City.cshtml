@model IEnumerable<State>;
<form method="post" action="AddCity">
    <div class="form-group">
        <label for="txtstate">Select State </label>
        @{ 
            var OpTypes = new SelectList(Model, "Id", "StateName");
        }
       
        <select class="form-control ddlBank12" name="StateID" aria-describedby="StateID" asp-items="@OpTypes">
            <option value=0>:: Choose State ::</option>
        </select>
    </div>
    <div class="form-group">
        <label for="txtstate">City Name</label>
        <input type="text" class="form-control" name="CityName" id="CityName" aria-describedby="CityName" placeholder="City Name">
 </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

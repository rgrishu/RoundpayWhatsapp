
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Master Service List
        </h3>
        <button class="btn btn-primary Renderform" onclick="RenderForm(0)" data-toggle="modal" data-target="#exampleModalCenter">Create New</button>
    </div>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>ServiceName</th>
                    <th>SCode</th>
                    <th>Remark</th>
                    <th>IsActive</th>
                    <th>IsFeature</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

</div>
<div class="modal fade" style="width:800px;margin:auto" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            
            <div id="CreateMe"></div>
            
        </div>
    </div>
</div>

<!-- content-wrapper ends -->
@section scripts{
<script>
    $(document).ready(function () {
        loadData();
    });
    function loadData(){
         $.ajax({
               type: 'get',
                url: '/Master/GetMasterServiceList',
                success: function (data) {
                      $('tbody').html(data);
                },
                error: function (data) {
                    console.log('An error occurred.');
                    console.log(data);
                },
          });
    }
    function RenderForm(id){
        $.ajax({
               type: 'get',
                url: '/Master/Create/' + id,
                success: function (data) {
                    console.log(data);
                    $("#CreateMe").empty();
                    $("#CreateMe").html(data);
                },
                error: function (data) {
                    console.log('An error occurred.');
                    console.log(data);
                },
          });
    }

</script>
}

@section scripts{
    <script>
        $(document).ready(function() {
            loadData();
        });
        function loadData() {
            $.ajax({
                type: 'get',
                url: '/Master/GetPackageList',
                success: function(data) {
                    $('tbody').html(data);
                },
                error: function(data) {
                    console.log('An error occurred.');
                    console.log(data);
                },
            });
        }
        $('#btncreateuser').click(function() {
            RenderForm(0);
        });
        function RenderForm(id) {
            $.ajax({
                type: 'post',
                url: '/Master/CreatePackage/',
                data: { id: id },
                success: function(data) {
                    Q.alert({
                        title: "Add Pachage",
                        body: data,
                        width: '500px',
                    });
                },
                error: function(data) {
                },
            });
        }
    </script>
}

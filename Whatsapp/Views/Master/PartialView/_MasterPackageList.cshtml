@using Whatsapp.Models.Data;
@model List<MasterPackage>
@if (Model != null && Model.Any())
{
    int i = 1;
    @foreach (var item in Model)
    {
        <tr>
            <td>@i</td>
            <td>
                @Html.DisplayFor(modelItem => item.PackageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValidityInDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <button onclick="RenderForm(@item.Id)" class="btn btn-primary editbtn" data-toggle="modal" data-target="#exampleModalCenter">
                    Edit
                </button>
                <a href="/Master/DeleteMasterPackage/@item.Id" class="btn btn-secondary deletbtn">
                    Delete
                </a>
            </td>
        </tr>
        i++;
    }
}
else
{
    <tr>
        <td colspan="3">No Records Found</td>
    </tr>
}
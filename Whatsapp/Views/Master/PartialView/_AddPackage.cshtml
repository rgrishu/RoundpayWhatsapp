@model Whatsapp.Models.Package


<div class="card">

    <div class="card-body">
        <form class="form-block" action="/Master/AddPackage" method="post">
            <div class="row">
                @if (Model == null)
                {
                    <input type="hidden" asp-for="PackageID" value="0" />
                }
                else
                {
                    <input type="hidden" asp-for="PackageID" value="@Model.PackageID" />
                }

                <div class="form-group col-sm-6">
                    <label>Service Name</label>
                    <select asp-for="ServiceID"  class="custom-select form-control" asp-items="ViewBag.ServiceData">
                        <option id="0"> -- Select Service -- </option>
                    </select>
                </div>
                <div class="form-group col-sm-6">
                    <label>Master Package</label>
                    <select asp-for="MasterPackageID"  class="custom-select form-control" asp-items="ViewBag.MaspterPackage">
                        <option id="0"> -- Master Package -- </option>
                    </select>
                </div>
                <div class="form-group col-sm-6">
                    <label>Status</label>
                    <select asp-for="Status" class="form-control">
                        <option value="0">Active</option>
                        <option value="1">Inactive</option>
                    </select>
                </div>
                <div class="form-group col-sm-6">
                    <input class="form-check-input ml-sm-2 mt-sm-5" type="checkbox" asp-for="IsActive">
                    <label class="form-check-label ml-sm-4 mt-sm-5" for="IsActive">
                        IsActive
                    </label>
                </div>
            </div>
            <div class="row justify-content-center">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>



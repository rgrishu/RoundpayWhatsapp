
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Master Service List
        </h3>
        <button class="btn btn-primary Renderform" onclick="RenderForm(0)" data-toggle="modal" data-target="#exampleModalCenter">Create New</button>
    </div>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>ServiceName</th>
                    <th>SCode</th>
                    <th>Remark</th>
                    <th>IsActive</th>
                    <th>IsFeature</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- content-wrapper ends -->
@section scripts{
<script>
    $(document).ready(function () {
        loadData();
    });
    function loadData(){
         $.ajax({
               type: 'get',
                url: '/Master/GetMasterServiceFeatureList',
                success: function (data) {
                      $('tbody').html(data);
                },
                error: function (data) {
                    console.log('An error occurred.');
                    console.log(data);
                },
          });
    }
    function RenderForm(id){
        $.ajax({
               type: 'get',
                url: '/Master/CreateServiceFeature/' + id,
                success: function (data) {
                    Q.alert({
                        title: "Add Service",
                        body: data,
                        width: '500px',
                    });
                },
                error: function (data) {
                   
                },
          });
    }

</script>
}

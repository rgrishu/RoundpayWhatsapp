
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Emails
        </h3>
        
    </div>


    
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-10">
                    <h4 class="card-title">

                        <i class="fas fa-wrench"></i>
                        Email List

                    </h4>
                </div>
                <div class="col-md-2 text-right">
                    <button class="btn btn-primary btn-sm Renderform" onclick="RenderForm(0)" data-toggle="modal" data-target="#exampleModalCenter">+ Create New</button>
                </div>
            </div>
        </div>

        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="thead-light">
                        <tr>
                             <th>#</th>
                                    <th>FromEmail</th>
                                    <th>HostName</th>
                                    <th>Port</th>
                                    <th>WID</th>
                                    <th>IsEmailVerified</th>
                                    <th>IsActive</th>
                                    <th>IsSSL</th>
                                    <th>IsDefault</th>
                                    <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>



        </div>
    </div>






</div>

@section scripts{
<script>
    $(document).ready(function () {
        loadData();
    });
    function loadData(){
         $.ajax({
               type: 'get',
                url: '/Master/GetEmailSettingList',
                success: function (data) {
                      $('tbody').html(data);
                },
                error: function (data) {
                    console.log('An error occurred.');
                    console.log(data);
                },
          });
    }
    $('#btncreateuser').click(function () {
           RenderForm(0);
        });
    function RenderForm(id){
        $.ajax({
                type: 'post',
                url: '/Master/CreateEmail/',
                data: { id:id},
                success: function (data) {
                    Q.alert({
                        title: "Add Email",
                        body: data,
                        width: '500px',
                    });
                },
                error: function (data) {
                },
            });
    }
</script>
}

@section scripts{
<script>
    $(document).ready(function () {
        loadData();
    });
    function loadData(){
         $.ajax({
               type: 'get',
                url: '/Master/GetMasterPackageList',
                success: function (data) {
                      $('tbody').html(data);
                },
                error: function (data) {
                    console.log('An error occurred.');
                    console.log(data);
                },
          });
    }
    $('#btncreateuser').click(function () {
           RenderForm(0);
        });
    function RenderForm(id){
        $.ajax({
                type: 'post',
                url: '/Master/CreateMasterPackage/',
                data: { id:id},
                success: function (data) {
                    Q.alert({
                        title: "Add Master Package",
                        body: data,
                        width: '500px',
                    });
                },
                error: function (data) {
                },
            });
    }
</script>
}

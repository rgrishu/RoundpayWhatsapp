@using Whatsapp.Models.Data;
@model UserFundRequest

<div class="card">

    <div class="card-body">
        <form method="post" class="form-block" action="/Users/AddRaiseFundRequest">
            <div class="row">
                <input type="hidden" asp-for="UserId" value="@Model.UserId" />
                <div class="form-group col-sm-12">
                    <label>Requested Amount</label>
                    <input type="text" class="form-control" asp-for="RequestedAmount" placeholder="Enter Amount">
                </div>
                <div class="form-group col-sm-12">
                    <label>Remark</label>
                    <input type="text" class="form-control" asp-for="Remark" placeholder="Enter Remark">
                </div>
            </div>
            <div class="row justify-content-center">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>
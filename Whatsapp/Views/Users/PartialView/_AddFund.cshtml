@using Whatsapp.Models.Data;
@model UserBalance

<div class="card">

    <div class="card-body">
        <form method="post" class="form-block" action="/Users/AddFund">
            <div class="row">
                <div class="form-group col-sm-12">
                    <label>Requested Amount</label>
                    <input type="text" class="form-control" asp-for="Balance" placeholder="Enter Amount">
                </div>
            </div>
            <div class="row justify-content-center">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>
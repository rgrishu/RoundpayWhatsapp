
<div class="row">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
        <div class="form-group">
            <label>Role</label>
            <select class="form-control" id="Role">
                <option value="">--Select--</option>
                <option value="Seller">Seller</option>
                <option value="ReSeller">ReSeller</option>
                <option value="White Label">White Label</option>
            </select>
        </div>
    </div>

    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" id="Name" required />
        </div>
    </div>

    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
        <div class="form-group">
            <label>Mobile No</label>
            <input class="form-control" id="PhoneNumber" />
        </div>
    </div>

    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
        <div class="form-group">
            <label>Email ID</label>
            <input class="form-control" id="Email" />
        </div>
    </div>

    <div class="btn-group">
        <button type="submit" id="btnAddUser" class="btn btn-primary">Add</button>
    </div>
</div>



<script>
    $('#btnAddUser').click(function(){
         formData=new  FormData();
         formData.append("Role", $("#Role").val());
         formData.append("Name", $("#Name").val());
         formData.append("PhoneNumber", $("#PhoneNumber").val());
         formData.append("Email", $("#Email").val());
        var url='/Users/AddUser';

         if($('#btnAddUser').html()=='Update')
         {
         url='/Users/UpdateUserDetail';
         }

         $.ajax({
             type: 'POST',
             url: url,
             processData: false,
             contentType: false,
             data: formData,
             success: result => {
              if(result.statusCode==1)
              {
                  console.log(result);
                   Q.notify(result.statusCode, result.responseText);
                   loadData();
                  $('input').val('');
                  //$('.field-validation-valid').remove();
                  //$('.btnreg').html('Create');
                    $('.ui-dialog-titlebar-close').click();
              }
              else
              {
                      Q.notify(result.statusCode, result.responseText);
              }
             },
             error:xhr=>{
                 Q.renderError(xhr);
                    Q.notify(-1, 'An error occurred.');
             }
         })

     });



</script>